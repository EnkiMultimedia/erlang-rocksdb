{eunit_opts, [verbose]}.
{deps, []}.

{profiles, [{docs, [
                    {deps, [edown]},

                    {edoc_opts, [{doclet, edown_doclet},
                                 {packages, false},
                                 {subpackages, true},
                                 {top_level_readme,
                                  {"./README.md", "http://gitlab.com/barrel-db/erlang-rocksdb"}}]}]}

           ]}.

{post_hooks, [
    {clean, "rm -f priv/*.so"},
    {clean, "rm -rf c_src/build"},
    {compile, "sh -c \"(mkdir -p c_src/build && cd c_src/build && cmake .. && make -j3)\""}
]}.
